<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance"/>

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/dp_40</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">@dimen/dp_32</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">@dimen/dp_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H4">
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H5">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H6">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.H7">
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.P1">
        <item name="android:textSize">@dimen/dp_20</item>
    </style>

    <style name="TextAppearance.P2">
        <item name="android:textSize">@dimen/dp_18</item>
    </style>

    <style name="TextAppearance.P3">
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

    <style name="TextAppearance.P4">
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded_4">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded_8">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded_12">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded_16">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded_24">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Oval">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay_Top_4">
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay_Top_16">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="backgroundInsetStart">52dp</item>
        <item name="backgroundInsetTop">0dp</item>
        <item name="backgroundInsetEnd">52dp</item>
        <item name="backgroundInsetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Rounded_24</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!--TextInput-->
    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="boxBackgroundColor">@color/til_box_bg_color</item>
        <item name="boxStrokeColor">@color/til_box_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/functional_error</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Rounded_16</item>
    </style>

    <style name="TextInput.password">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@null</item>
    </style>

    <style name="TextInputTextView">
        <item name="android:textColor">@color/colorNeutral_N1_primary_text</item>
        <item name="android:textColorHint">@color/til_boxStroke</item>
    </style>
</resources>